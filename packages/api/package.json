{
  "name": "@GeoScheduler/api",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./src/index.ts"
    }
  },
  "license": "MIT",
  "scripts": {
    "test": "pnpm with-test-env jest",
    "test:watch": "pnpm with-test-env jest --watch",
    "test:coverage": "pnpm with-test-env jest --coverage",
    "with-test-env": "dotenv -e ../db/.env.test --",
    "build": "tsc",
    "clean": "git clean -xdf .cache .turbo dist node_modules",
    "dev": "tsc --watch",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "lint": "eslint",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false"
  },
  "dependencies": {
    "@GeoScheduler/db": "workspace:*",
    "@GeoScheduler/validators": "workspace:*",
    "@auth0/nextjs-auth0": "^3.5.0",
    "@trpc/server": "catalog:",
    "dotenv": "^16.4.5",
    "jose": "^5.8.0",
    "superjson": "2.2.1",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@GeoScheduler/eslint-config": "workspace:*",
    "@GeoScheduler/prettier-config": "workspace:*",
    "@GeoScheduler/tsconfig": "workspace:*",
    "@trpc/client": "catalog:",
    "@types/jest": "^29.5.12",
    "@types/node": "catalog:",
    "@types/supertest": "^6.0.2",
    "dotenv-cli": "^7.4.2",
    "eslint": "catalog:",
    "jest": "^29.7.0",
    "prettier": "catalog:",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.4",
    "typescript": "catalog:"
  },
  "prettier": "@GeoScheduler/prettier-config"
}
